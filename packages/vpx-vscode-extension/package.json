{
  "name": "vpx-css-helper",
  "displayName": "VPX CSS Helper",
  "description": "VS Code IntelliSense for postcss-vpx-to-vw units and linear-vpx() function",
  "version": "0.1.0",
  "publisher": "equinoxhz",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/EquinoxHZ/vpx-to-viewport"
  },
  "engines": {
    "vscode": "^1.82.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "vpx",
    "postcss",
    "viewport",
    "responsive"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:css",
    "onLanguage:scss",
    "onLanguage:less",
    "onLanguage:vue",
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact"
  ],
  "contributes": {
    "languages": [
      { "id": "css" },
      { "id": "scss" },
      { "id": "less" },
      { "id": "vue" },
      { "id": "javascriptreact" },
      { "id": "typescriptreact" }
    ],
    "grammars": [
      {
        "scopeName": "source.css.vpx",
        "path": "./syntaxes/vpx.json",
        "injectTo": [
          "source.css",
          "source.scss",
          "source.less",
          "source.vue",
          "source.js.jsx",
          "source.tsx"
        ]
      }
    ],
    "configuration": {
      "title": "VPX CSS Helper",
      "properties": {
        "vpxCssHelper.enableCompletions": {
          "type": "boolean",
          "default": true,
          "description": "Enable completion suggestions for VPX units and linear-vpx()"
        },
        "vpxCssHelper.enableHover": {
          "type": "boolean",
          "default": true,
          "description": "Show hover documentation for VPX units and linear-vpx()"
        }
      }
    },
    "configurationDefaults": {
      "editor.tokenColorCustomizations": {
        "textMateRules": [
          {
            "scope": "support.constant.vpx-unit",
            "settings": {
              "foreground": "#C586C0"
            }
          },
          {
            "scope": "support.function.vpx",
            "settings": {
              "foreground": "#DCDCAA"
            }
          }
        ]
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -p ./ --watch",
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint src --ext ts --fix",
    "test": "echo \"No tests yet\""
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@types/node": "^18.18.0",
    "@types/vscode": "^1.82.0",
    "eslint": "^8.0.0",
    "typescript": "^5.3.0"
  }
}
