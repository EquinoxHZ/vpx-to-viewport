{
  "name": "vpx-to-viewport",
  "version": "1.8.0",
  "description": "Universal VPX to viewport units converter. Supports PostCSS plugin, Vite plugin, and Webpack loader. Converts vpx, maxvpx, minvpx, cvpx, and linear-vpx() for fluid responsive design across all build tools.",
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cross": "jest cross-platform.test.js",
    "test:postcss": "jest index.test.js",
    "test:vite": "jest vite-plugin-vpx.test.js",
    "lint": "eslint index.js",
    "lint:fix": "eslint index.js --fix",
    "demo:basic": "node demo/basic-test.js",
    "demo:pseudo": "node demo/pseudo-elements-test.js",
    "demo:ratio": "node demo/ratio-test.js",
    "demo:validate": "node demo/validate.js",
    "demo:examples": "node demo/examples.js",
    "demo:benchmark": "node demo/benchmark.js",
    "demo:log": "node demo/log-demo.js",
    "demo:cvpx": "node demo/cvpx-demo.js",
    "demo:media-query": "node demo/media-query-demo.js",
    "demo:page": "cd docs && python -m http.server 8000",
    "demo:vite-plugin": "node vite-plugin-vpx.test.js",
    "benchmark": "node vite-plugin-benchmark.js",
    "benchmark:memory": "node --expose-gc vite-plugin-benchmark.js",
    "example:vite": "cd examples/vite-plugin-example && npm install && npm run dev",
    "example:webpack": "cd examples/webpack-loader-example && npm install && npm start",
    "prepublishOnly": "npm run demo:validate && npm run lint && npm test"
  },
  "keywords": [
    "vpx",
    "viewport",
    "responsive",
    "mobile-first",
    "postcss",
    "postcss-plugin",
    "vite",
    "vite-plugin",
    "webpack",
    "webpack-loader",
    "css",
    "vw",
    "vh",
    "fluid-design",
    "vpx-to-viewport"
  ],
  "author": "Felix Zhu",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EquinoxHZ/vpx-to-viewport.git"
  },
  "bugs": {
    "url": "https://github.com/EquinoxHZ/vpx-to-viewport/issues"
  },
  "homepage": "https://github.com/EquinoxHZ/vpx-to-viewport#readme",
  "engines": {
    "node": ">=14.0.0"
  },
  "peerDependencies": {
    "postcss": "^8.4.0"
  },
  "dependencies": {
    "postcss": "^8.4.31"
  },
  "devDependencies": {
    "jest": "^29.0.0",
    "eslint": "^8.0.0",
    "loader-utils": "^3.2.1",
    "schema-utils": "^4.2.0"
  },
  "files": [
    "index.js",
    "index.d.ts",
    "vpx-core.js",
    "vite-plugin-vpx.js",
    "vite-plugin-vpx.d.ts",
    "webpack-loader-vpx.js",
    "webpack-loader-vpx.d.ts",
    "README.md",
    "README.en.md",
    "CHANGELOG.md",
    "MIGRATION.md",
    "CSS_INTELLISENSE.md",
    "VITE_PLUGIN_GUIDE.md",
    "VITE_PLUGIN_GUIDE.en.md",
    "WEBPACK_LOADER_GUIDE.md"
  ]
}
